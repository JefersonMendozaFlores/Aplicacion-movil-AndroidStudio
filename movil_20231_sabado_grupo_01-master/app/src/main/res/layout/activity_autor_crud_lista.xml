<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fondocolorautor"
    android:orientation="vertical"
    android:padding="15sp"
    tools:context=".vista.crud.AutorCrudListaActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:text="@string/txt_crud_de_autor"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/build_white_18dp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btnCrudListar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refrescar"
        android:background="@drawable/btnautor"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnCrudRegistra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar nuevo Autor"
        android:background="@drawable/btnautor"
        android:layout_marginBottom="16dp"/>

    <GridView
        android:id="@+id/gridCrudAutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="1"
        android:horizontalSpacing="6dp"
        android:verticalSpacing="6dp"
        />

</androidx.appcompat.widget.LinearLayoutCompat>